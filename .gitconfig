[user]
    email    = lmulling@proton.me
    name     = Mulling
    username = Mulling
[format]
    signoff = true
[core]
    editor = nvim
[alias]
    tree = "!git log --graph --decorate --pretty=oneline --abbrev-commit"
    rank = "shortlog -s -n --no-merges"
    who = "blame -wCCC"
[credential]
    helper = cache --timeout=3600
[rerere]
    enabled = true
[init]
    defaultBranch = master
[color "diff"]
    old  = 8
    meta = 4
[pull]
	rebase = true
[merge]
	tool = nvimdiff1
[rebase]
    autoStash = true
[tag]
    sort = -taggerdate
[branch]
    sort = -committerdate
